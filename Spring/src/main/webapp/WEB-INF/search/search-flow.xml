<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="searchCriteria" class="be.groept.model.orders.OrderSearchCriteria"/>
	<var name="searchBackingAction" class="be.groept.controllers.SearchBackingAction"/>
	<var name="detailBackingAction" class="be.groept.controllers.DetailBackingAction"/>

	<view-state id="search"  model="searchCriteria">
		<transition on="search" to="search" >
			<evaluate expression="searchBackingAction.search(flowScope.searchCriteria)" />
		</transition>
		
		<transition on="detail" to="detail"/>
	</view-state>
	
	<view-state id="detail" view="detail.xhtml" >
		<transition on="back" to="search"/>		
	</view-state>
</flow>	
	